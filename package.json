{
  "name": "kinpath",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "clean": "turbo clean",
    "db:migrate": "cd packages/supabase && supabase db push",
    "db:reset": "cd packages/supabase && supabase db reset",
    "db:seed": "cd packages/supabase && supabase db seed",
    "db:generate-types": "cd packages/supabase && supabase gen types typescript --local > ../shared/src/types/database.ts"
  },
  "devDependencies": {
    "turbo": "^2.3.0",
    "typescript": "^5.7.0"
  },
  "packageManager": "npm@10.8.0",
  "engines": {
    "node": ">=20.0.0"
  }
}
